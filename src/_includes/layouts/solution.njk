{% extends "layouts/base.njk" %}

{% block body %}
  <!-- Hero -->
<section class="relative bg-gradient-to-br from-emerald-50 via-white to-amber-50 pt-20 pb-24 overflow-hidden">
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 text-center space-y-8 fade-in">
   
    <h1 class="text-5xl md:text-6xl font-bold text-slate-900 leading-tight">{{ solution.title }}</h1>
    <p class="text-xl text-slate-600 leading-relaxed">
    {{ solution.description }}
    </p>
    <div class="flex flex-col sm:flex-row justify-center gap-4">
      <a href="{{ solution.topCTA.href | default('/contact/') }}" class="btn-gold px-8 py-4">
        {{ solution.topCTA.text | default('Book a Discovery Call') }}
      </a>
      <a href="/solutions/" class="btn-emerald-white px-8 py-4">
        View All Solutions
      </a>
    </div>
  </div>
</section>

<!-- Services -->
<section class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12 fade-in">
     
      <h2 class="text-4xl font-bold text-slate-900 mt-4">{{ solution.service.title }}</h2>
      <p class="text-lg text-slate-600 mt-4">
        {{ solution.service.description }}
      </p>
    </div>
    <div class="flex flex-wrap justify-center gap-8 fade-in text-slate-600 text-lg">
      {% for service in solution.service.items %}
      <article class="p-6 rounded-3xl border border-slate-100 bg-slate-50 shadow-lg flex flex-col gap-3 max-w-sm">
        <h3 class="text-2xl font-semibold text-slate-900">{{ service.title }}</h3>
        <p class="flex-1">
          {{ service.description | markdown | safe }}
        </p>
      </article>
      {% endfor %}
    </div>
  </div>
</section>

{% if solution.process %}
<!-- Process -->
<section class="py-20 bg-emerald-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="fade-in space-y-4">
      
      <h2 class="text-4xl font-bold text-slate-900 text-center">{{ solution.process.title }}</h2>
      <div class="grid grid-cols-2 gap-4">
        <div>
          <p class="text-xl text-slate-600">
            {{ solution.process.description }}
          </p>
        </div>
        <div class="flex flex-wrap gap-4">
          <p class="inline-flex items-center px-4 py-1.5 rounded-full bg-emerald-100 text-emerald-700 text-xs font-semibold tracking-widest uppercase">
            Delivery Formats
          </p>
          {% for result in solution.process.results %}
          <span class="inline-flex items-center px-5 py-2 rounded-full bg-white text-emerald-700 font-semibold text-sm shadow-sm border border-emerald-200">
            {{ result }}
          </span>
          {% endfor %}
        </div>
      </div>
      
    </div>
    
  </div>
</section>
{% endif %}


<!-- CTA -->
<section class="py-20 bg-emerald-600">
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 text-center text-white space-y-6 fade-in">
    <h2 class="text-4xl font-bold">{{ solution.bottomCTA.title }}</h2>
    <p class="text-xl text-emerald-100">
      {{ solution.bottomCTA.description }}
    </p>
    <div class="flex flex-col sm:flex-row justify-center gap-4">
      <a href="/contact/" class="btn-gold px-8 py-4">
        Book a Discovery Call
      </a>
      <a href="/solutions/" class="btn-emerald px-8 py-4">
        Explore Other Solutions
      </a>
    </div>
  </div>
</section>
{% endblock %}

